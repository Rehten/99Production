-
    var url = require('./../variables-for-templates').url
    var servicesList = require('./../variables-for-templates').servicesList


.services-block.col-12.px-0
    .services-backgrounds.position-absolute
        each item in servicesList
            div(id=item.identificator + 'Image').service-image.d-flex.flex-row.justify-content-center.align-items-center
                img(src=item.imageSrc, alt='')
    .services-content.mx-0.d-flex.flex-lg-row.flex-md-column.justify-content-lg-start.justify-content-md-between.px-0
        .col-lg-8.col-md-12
            .col-lg-6.offset-lg-6.col-md-12.offset-md-0.mt-3
                h1.text-light.text-center.text-uppercase.text-underline Услуги
            .service-texts.col-lg-8.col-md-12.mx-lg-auto.mx-md-0.mt-lg-5.mt-md-0
                each item in servicesList
                    div(id=item.identificator + 'Text').service-text
                        .lg-show.col-12.flex-column.px-0
                            each row in item.rowsDesktop
                                h6.text-light.small.mb-3
                                    !=row
                        .md-show.col-12.flex-column
                            .service-item-header.text-uppercase
                                span Production
                            .service-item-content.px-3
                                each row in item.rowsMobile
                                    p.text-light
                                        !=row
                                .d-flex.flex-row.justify-content-end.px-5
                                    a.text-light.text-underline.h2(href='#') Скачать презентацию
            .col-8.mx-auto.mt-4.lg-show.px-0.mt-5
                .col-xl-4.col-lg-5
                    a.btn.btn-lg.btn-outline-light.text-uppercase.btn-block.py-3.rounded-0.small.border-2.small(href='./')
                        h6.font-weight-bold.small.mb-0 Подробнее
        .col-3.offset-1.position-relative.lg-show
            .col-10.pl-3.position-absolute
                .service-rails
                    .service-rail.bg-light
                    .service-rail.bg-light
            .col-10.pl-3.position-absolute
                .service-items
                    .items-wrapper.col-12.px-0.py-3
                        .service-item-rail
                        each item in servicesList
                            .service-item(data-target=item.identificator)
                                p.mb-0.text-center.text-uppercase
                                    !=item.name
                            .service-item-rail
        .col-lg-0.col-md-12.md-show.pb-3.flex-column
            .col-11.px-0.mx-auto.position-relative
                .position-absolute.col-12.px-0
                    #ServicesDropDown.bg-black-transparent.toggle-target-menu
                        div
                            each item in servicesList
                                .service-item.mobile.border-0(data-target=item.identificator)
                                    p.mb-0.text-left.pl-2.text-uppercase
                                        !=item.name
            .toggle-menu.col-11.bg-black-transparent.mx-auto.px-4.py-2.d-flex.flex-row.justify-content-between.align-items-center(data-target='#ServicesDropDown')
                span.text-uppercase.mb-0 Услуги
                svg#Layer_1(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', version='1.1', x='0px', y='0px', width='1.5rem', height='1.5rem', viewbox='0 0 306 306', style='enable-background:new 0 0 407.436 407.436;', xml:space='preserve')
                    polygon(points='35.7,247.35 153,130.05 270.3,247.35 306,211.65 153,58.65 0,211.65 		', fill='white')
